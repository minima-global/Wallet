{
    "name": "wallet",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "build-zip": "npm run build && rm wallet_* && date=$(date +%Y_%m_%d_%H%M) && cd build && zip -r wallet_${date}.zip . && mv wallet_${date}.zip ../",
        "build-mdjs": "npm run build && rm wallet_* && date=$(date +%Y_%m_%d_%H%M) && cd build && zip -r wallet_${date}.minidapp . && mv wallet_${date}.minidapp ../",
        "reload": "rm -r node_modules/ && npm i && npm run start",
        "mds-uninstall": "curl -X POST http://localhost:8090/mds/manage/uninstall -d '{\"port\": \"8081\"}'",
        "mds-install": "curl --form package=\"@/Users/eliasnemr/projects/v2/wallet/wallet.zip\" http://localhost:8090/mds/manage/install -v",
        "refresh-ff": "bash refresh-firefox.sh",
        "mds-reload": "npm run build-zip && npm run mds-uninstall && npm run mds-install"
    },
    "homepage": ".",
    "proxy": "http://localhost:9002",
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "dependencies": {
        "@minima-global/mds-api": "latest",
        "@emotion/react": "^11.7.1",
        "@emotion/styled": "^11.6.0",
        "@mui/icons-material": "^5.3.1",
        "@mui/material": "^5.3.1",
        "@mui/system": "^5.3.0",
        "@testing-library/jest-dom": "^5.16.1",
        "@testing-library/react": "^12.1.2",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.4.0",
        "@types/node": "^16.11.21",
        "@types/react": "^17.0.38",
        "@types/react-dom": "^17.0.11",
        "formik": "^2.2.9",
        "html5-qrcode": "^2.1.6",
        "http-proxy-middleware": "^2.0.2",
        "notistack": "^2.0.3",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-qr-code": "^2.0.3",
        "react-router-dom": "^6.2.1",
        "react-scripts": "5.0.0",
        "typescript": "^4.5.5",
        "yup": "^0.32.11"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "printWidth": 120
    }
}
